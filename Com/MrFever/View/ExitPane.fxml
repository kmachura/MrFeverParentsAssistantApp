<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Com.MrFever.Controller.ExitController">
   <center>
      <HBox maxHeight="400.0" maxWidth="500.0" prefHeight="400.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView id="mrFeverImg" fx:id="mrFeverImage" fitHeight="620.0" fitWidth="309.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Resources/mrFever.png" />
               </image>
            </ImageView>
            <VBox>
               <children>
                  <TextArea id="exitTextArea" fx:id="welcomeTextArea" depthTest="DISABLE" editable="false" prefHeight="150.0" prefWidth="228.0" text="Thank you for using the app. See you next time!&#10;Bye bye..." wrapText="true">
                     <font>
                        <Font name="Bookman Old Style Italic" size="20.0" />
                     </font>
                  </TextArea>
                  <Separator prefHeight="40.0" prefWidth="200.0" />
                  <Button id="exitAppButton" fx:id="startButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="100.0" text="Exit">
                     <VBox.margin>
                        <Insets left="45.0" />
                     </VBox.margin></Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <right>
      <Separator orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0" visible="false" BorderPane.alignment="CENTER" />
   </right>
   <top>
      <Separator prefHeight="100.0" prefWidth="200.0" visible="false" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
